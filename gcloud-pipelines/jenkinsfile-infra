pipeline {
    agent any

    stages {
        stage('Terraform Init') {
            steps {
                echo 'Hello World'
                sh 'ls -l'
            }
        }

        stage('Terraform Plan') {
            steps {
                echo 'Hello World'
                sh 'ls -l'
            }
        }

        stage('Terraform Apply') {
            steps {
                echo 'Hello World'
                sh 'ls -l'
            }
        }
    }
}
