pipeline {
    agent any

    stages {
        stage('Terraform Init') {
            steps {
                dir ("gcloud-infrastructure"){
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir ("gcloud-infrastructure"){
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir ("gcloud-infrastructure"){
                    sh 'terraform apply --auto-approve'
                }
            }
        }
    }
}
